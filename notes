// Reference of essential elements
const cartPage = document.querySelector('.cart-page');
const loadQuoteBtn = document.querySelector ('#load-quote');
const quoteShow = document.querySelector ('.quote');
const source = document.querySelector ('.source');

// Reference of essential elements for biography
const born = document.querySelector('#born');
const death = document.querySelector ('#death');
const orginality = document.querySelector ('#orginality');
const profession = document.querySelector ('#profession');
const image = document.querySelector ('#image');

// Reference of essential elements for tags
const motivational = document.querySelector('#dream');
const life = document.querySelector('#life');
const friendship = document.querySelector('#friend');
const attitude = document.querySelector('#love');


function dreamQt(){

    const dreamQt = [];
    
    for ( let item of quotes) {
        if (item.tag === 'dream' ) {
            dreamQt.push(item);
            rdmdreamQt = dreamQt[Math.floor(Math.random() * dreamQt.length)];
        }
    }
    
    return rdmdreamQt;
    
    }
        
    

// rdmBgImg function 
function getRdmBgImg (){
    rdmBgImg = bgUrls[Math.floor(Math.random() * bgUrls.length)];
    // console.log(rdmBgImg);
    cartPage.style.backgroundImage = rdmBgImg.bgUrl;

}
getRdmBgImg()



// getRandomQuote function
 function getRandomQuote () {
 
    rdmQuote = quotes[Math.floor(Math.random() * quotes.length)];
    // console.log(rdmQuote);
 };
 getRandomQuote();

 

 

// printQuote function
  function printQuote () {
    
    // Task 1: call the getRandomQuote()
    getRandomQuote();


    // Task 2:  use the returned quote object to build 
    // a string of HTML and quote properties, then use 
    // that string to display a random quote in the browser
    quoteShow.innerText = rdmQuote.quote ;
   
    
    //  concatenate a <span> element with the class "citation" to the HTML string.
    //  concatenate a <span> element with the class "year" to the HTML string.
    source.innerHTML = `
    ${rdmQuote.source} <span class='citation'>${rdmQuote.citation}</span> <span class='year'>${rdmQuote.year}</span>
    `;
    born.innerText = rdmQuote.born;
    death.innerText = rdmQuote.death;
    orginality.innerText = rdmQuote.orginality;
    profession.innerText = rdmQuote.profession;
    image.style.backgroundImage = rdmQuote.image;
    
  
  };
  printQuote();

  



  // click event listener for the print quote button
  loadQuoteBtn.addEventListener('click', function() {
    printQuote();
    getRandomQuote();
    getRdmBgImg();
   
     
  });


  motivational.addEventListener('click', function() {
    printQuote();
    console.log(printQuote())
  });


