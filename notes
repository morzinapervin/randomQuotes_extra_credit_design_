               ////////////////////////     dream-tag start   //////////////////
function getRdmDreamQt(){


    const dreamQt = [];
   
    
    
    for ( let item of quotes) {
        if (item.tag === 'dream' ) {
            dreamQt.push(item);
            // console.log(dreamQt);
            rdmdreamQt = dreamQt[Math.floor(Math.random() * dreamQt.length)];
        }
    }
    
    }
    getRdmDreamQt();

function printDreamQuote () {
    getRdmDreamQt();

    dream_quoteShow.innerText = rdmdreamQt.quote ;
   
    
    //  concatenate a <span> element with the class "citation" to the HTML string.
    //  concatenate a <span> element with the class "year" to the HTML string.
    dream_source.innerHTML = `
    ${rdmdreamQt.source} <span class='citation'>${rdmdreamQt.citation}</span> <span class='year'>${rdmdreamQt.year}</span>
    `;
    dream_born.innerText = rdmdreamQt.born;
    dream_death.innerText = rdmdreamQt.death;
    dream_orginality.innerText = rdmdreamQt.orginality;
    dream_profession.innerText = rdmdreamQt.profession;
    dream_image.style.backgroundImage = rdmdreamQt.image;
}

printDreamQuote ();



dreamQuoteBtn.addEventListener('click', function() {
    getRdmDreamQt();
    
    printDreamQuote ()
    
  });


////////////////////////     dream-tag start end  //////////////////  

   




 
 




